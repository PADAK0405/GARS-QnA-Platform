{
  "name": "qna-hub",
  "version": "1.0.0",
  "description": "GARS Q&A Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy:aws": "bash deploy.sh",
    "deploy:staging": "aws s3 sync public/ s3://gars-staging-bucket/ --delete",
    "deploy:prod": "aws s3 sync public/ s3://gars-prod-bucket/ --delete",
    "logs": "aws logs tail /aws/ec2/gars-app --follow",
    "db:migrate": "node scripts/migrate-to-aws.js",
    "db:backup": "mysqldump -u root -p qna_hub > gars_backup.sql",
    "db:restore": "mysql -h localhost -u root -p qna_hub < gars_backup.sql",
    "pm2:start": "pm2 start server.js --name gars-app",
    "pm2:stop": "pm2 stop gars-app",
    "pm2:restart": "pm2 restart gars-app",
    "pm2:logs": "pm2 logs gars-app",
    "pm2:status": "pm2 status"
  },
  "keywords": [
    "qna",
    "question",
    "answer",
    "community",
    "nodejs",
    "mysql",
    "express"
  ],
  "author": "GARS Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "express-session": "^1.17.3",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "bcrypt": "^5.1.1",
    "crypto": "^1.0.1",
    "moment-timezone": "^0.5.43",
    "@google/generative-ai": "^0.2.1",
    "aws-sdk": "^2.1500.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}